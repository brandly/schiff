<!DOCTYPE html>
<html ng-app="schiff">
  <head>
    <title><%= title %></title>

    <link rel='stylesheet' href='/stylesheets/normalize.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />

    <script src="/javascripts/angular.js"></script>
    <script src="/javascripts/socket.io.js"></script>
    <script src="/javascripts/schiff.js"></script>
  </head>
  <body ng-controller="MessageCtrl">
    <h1>Send <%= title %> a message</h1>

    <form ng-submit="sendMessage()">
      <input ng-model="newMessageText" type="text" placeholder="message" autofocus="autofocus" />
      <input type="submit" value="Submit" />
    </form>

    <ul class="messages">
      <li ng-repeat="message in messages" class="message">
        <p>{{message.text}}</p>
      </li>
    </ul>

  </body>
</html>